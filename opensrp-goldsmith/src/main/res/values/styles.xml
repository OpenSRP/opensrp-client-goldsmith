<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/futura_condensed_extra_bold</item>
        <item name="android:textColor">@color/chwPrimary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:lineSpacingMultiplier">1.19</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="BuildTextStyle">
            <item name="android:fontFamily">@font/roboto_regular</item>
            <item name="android:textColor">#FF999999</item>
            <item name="android:textSize">16sp</item>
            <item name="android:lineSpacingMultiplier">1.19</item>
    </style>

    <style name="HintTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">#AEAEAE</item>
        <item name="android:textColor">#666666</item>
    </style>

</resources>
