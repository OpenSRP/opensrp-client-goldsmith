<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textSize">@dimen/login_font_size</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/futura_condensed_extra_bold</item>
        <item name="android:textColor">@color/chwPrimary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:lineSpacingMultiplier">1.19</item>
    </style>

    <style name="BuildTextStyle">
            <item name="android:fontFamily">sans-serif</item>
            <item name="android:textColor">#FF999999</item>
            <item name="android:textSize">16sp</item>
            <item name="android:lineSpacingMultiplier">1.19</item>
    </style>

    <style name="HintTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">#AEAEAE</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="ShowPasswordStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#202020</item>
        <item name="android:lineSpacingMultiplier">1.19</item>
    </style>

    <style name="LoginButtonTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingMultiplier">1.18</item>
    </style>

    <style name="PoweredByStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#FF999999</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.19</item>
    </style>

</resources>
